<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third is-10-mobile is-offset-1-mobile">
      <h2 class="title is-2">New League</h2>

        <%= form_for @league do |f| %>
          <div class="field">
            <%= f.label :name, class: 'label' %>
            <%= f.text_field :name, class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :location, class: 'label' %>
            <%= f.text_field :location, class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :public, class: 'checkbox' do %>
              <%= f.check_box :public %>
              Public League
            <% end %>
          </div>
          <%= f.submit "Create league!", class: 'button is-normal is-fullwidth' %>
        <% end %>
    </div>
  </div>
</div>
