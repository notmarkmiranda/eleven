<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Create a brand new league!
      </h1>
      <h2 class="subtitle">
        Something something subtitle
      </h2>
    </div>
  </div>
</section>

<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third is-10-mobile is-offset-1-mobile">
        <%= form_for @league do |f| %>
          <div class="field">
            <%= f.label :name, 'League Name (required)', class: 'label' %>
            <%= f.text_field :name, class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :location, 'League Location (optional)', class: 'label' %>
            <%= f.text_field :location, class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :public, class: 'checkbox label' do %>
              <%= f.check_box :public, { checked: @league.public, class: 'checkbox' } %>
              Public League?
            <% end %>
          </div>
          <%= f.submit "Create league!", class: 'button is-normal is-fullwidth' %>
        <% end %>
    </div>
  </div>
</div>
